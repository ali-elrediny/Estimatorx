<div class="row">
    <div class="col-md-8">
        <!-- projectForm.ProjectName -->
        <div class="form-group"
             ng-class="{ 'has-error' : projectForm.ProjectName.$invalid && (projectForm.ProjectName.$touched || projectForm.$submitted) }">
            <label for="ProjectName" class="control-label">
                Project Name:
                <span class="text-danger">*</span>
            </label>
            <input type="text" name="ProjectName" id="ProjectName"
                   autocomplete="off"
                   placeholder="Project Name"
                   class="form-control"
                   required="required"
                   ng-model="viewModel.project.Name" />
            <div ng-messages="projectForm.ProjectName.$error" 
                 ng-if="projectForm.$submitted || projectForm.ProjectName.$touched">
                <span ng-message="required" class="help-block">Project Name is required</span>
            </div>
        </div>
        <!-- projectForm.ProjectDescription -->
        <div class="form-group"
             ng-class="{ 'has-error' : projectForm.ProjectDescription.$invalid && (projectForm.ProjectDescription.$touched || projectForm.$submitted) }">
            <label for="ProjectDescription" class="control-label">
                Project Description:
            </label>
            <textarea id="ProjectDescription" name="ProjectDescription" rows="5"
                      class="form-control"
                      placeholder="Description"
                      ng-model="viewModel.project.Description"></textarea>
            <div ng-messages="projectForm.ProjectDescription.$error"
                 ng-if="projectForm.$submitted || projectForm.ProjectDescription.$touched">
                <span ng-message="required" class="help-block">Project Description is required</span>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <!-- projectForm.HoursPerWeek -->
        <div class="form-group"
             ng-class="{ 'has-error' : projectForm.HoursPerWeek.$invalid && (projectForm.HoursPerWeek.$touched || projectForm.$submitted) }">
            <label for="HoursPerWeek" class="control-label">
                Hours Per Week:
                <span class="text-danger">*</span>
            </label>
            <input type="number" name="HoursPerWeek" id="HoursPerWeek"
                   autocomplete="off"
                   placeholder="Hours Per Week"
                   class="form-control"
                   required="required"
                   min="0" max="168"
                   ng-model="viewModel.project.HoursPerWeek" />
            <div ng-messages="projectForm.HoursPerWeek.$error"
                 ng-if="projectForm.$submitted || projectForm.HoursPerWeek.$touched">
                <span ng-message="required" class="help-block">Hours Per Week is required</span>
                <span ng-message="min" class="help-block">Hours Per Week must be zero or greater</span>
                <span ng-message="max" class="help-block">Hours Per Week must be less than 168 hours</span>
            </div>
        </div>
        <!-- projectForm.ContingencyRate -->
        <div class="form-group"
             ng-class="{ 'has-error' : projectForm.ContingencyRate.$invalid && (projectForm.ContingencyRate.$touched || projectForm.$submitted) }">
            <label for="ContingencyRate" class="control-label">
                Contingency Rate (Percentage):
                <span class="text-danger">*</span>
            </label>
            <input type="number" name="ContingencyRate" id="ContingencyRate"
                   autocomplete="off"
                   placeholder="Contingency Rate"
                   class="form-control"
                   required="required"
                   min="0" max="200"
                   ng-model="viewModel.project.ContingencyRate" />
            <div ng-messages="projectForm.ContingencyRate.$error"
                 ng-if="projectForm.$submitted || projectForm.ContingencyRate.$touched">
                <span ng-message="required" class="help-block">Contingency Rate is required</span>
                <span ng-message="min" class="help-block">Contingency Rate must be zero or greater</span>
                <span ng-message="max" class="help-block">Contingency Rate must be less than 200</span>
            </div>
        </div>
        <!-- projectForm.OrganizationId -->
        <div class="form-group"
             ng-class="{ 'has-error' : projectForm.OrganizationId.$invalid && (projectForm.OrganizationId.$touched || projectForm.$submitted) }">
            <label for="OrganizationId" class="control-label">
                Organization:
                <span class="text-danger">*</span>
            </label>
            <select class="form-control no-style"
                    name="OrganizationId" id="OrganizationId"
                    title="Select Organization"
                    required="required"
                    ng-model="viewModel.project.OrganizationId"
                    ng-options="item.Id as item.Name for item in viewModel.organizations">
                <option value="">-- select --</option>
            </select>
            <div ng-messages="projectForm.OrganizationId.$error"
                 ng-if="projectForm.$submitted || projectForm.OrganizationId.$touched">
                <span ng-message="required" class="help-block">Organization is required</span>
            </div>
        </div>
    </div>
</div>

