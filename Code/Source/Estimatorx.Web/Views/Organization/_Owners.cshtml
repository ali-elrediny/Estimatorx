<div class="row">
    <div class="col-md-8">
        <div class="table-responsive">
            <table class="table table-hover table-condensed" style="table-layout: fixed">
                <colgroup>
                    <col style="width: 150px" />
                    <col style="width: 200px" />
                    <col style="width: 30px" />
                </colgroup>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="owner in viewModel.owners">
                        <td>
                            <div class="nowrap">
                                {{owner.Name}}
                            </div>
                        </td>
                        <td>
                            <div class="nowrap">
                                <img gravatar-src-once="owner.Email" gravatar-size="24" gravatar-default="mm" />
                                {{owner.Email}}
                            </div>
                        </td>
                        <td style="text-align: right">
                            <div class="btn-group pull-right">
                                <button type="button" class="btn btn-link btn-sm"
                                        title="Remove owner form organization"
                                        ng-hide="!viewModel.selfOwner()"
                                        ng-disabled="viewModel.isSelf(owner.Id)"
                                        ng-click="viewModel.removeOwner(owner)">
                                    <i class="glyphicon glyphicon-remove"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3">
                            <div class="btn-group">
                                <button type="button" class="btn btn-link btn-sm"
                                        title="Add owner to organization"
                                        ng-hide="!viewModel.selfOwner()"
                                        ng-click="viewModel.addOwner()">
                                    <i class="glyphicon glyphicon-plus"></i>
                                    Add Owner
                                </button>
                            </div>
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

