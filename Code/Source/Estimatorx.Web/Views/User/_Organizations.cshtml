@using Microsoft.AspNet.Identity
<div class="row">
    <div class="col-md-8">
        <div class="table-responsive">
            <table class="table table-hover table-condensed" style="table-layout: fixed">
                <colgroup>
                    <col style="width: 150px" />
                    <col style="width: 200px" />
                    <col style="width: 30px" />
                </colgroup>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="organization in viewModel.organizations">
                        <td>
                            <div class="nowrap">
                                {{organization.Name}}
                            </div>
                        </td>
                        <td>
                            <div class="nowrap">                                
                                {{organization.Description}}
                            </div>
                        </td>
                        <td style="text-align: right">
                            <div class="btn-group pull-right">
                                <button type="button" class="btn btn-link btn-sm"
                                        title="Remove organization from user"
                                        ng-click="viewModel.removeOrganization(organization)">
                                    <i class="glyphicon glyphicon-remove"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3">
                            <div class="btn-group">
                                <button type="button" class="btn btn-link btn-sm"
                                        title="Add organization to user"
                                        ng-click="viewModel.addOrganization()">
                                    <i class="glyphicon glyphicon-plus"></i>
                                    Add Organization
                                </button>
                            </div>
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
